<% layout("/layouts/boilerplate") -%>
    <style>
        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            background: #f8f9fa;
            margin: 0;
            padding: 0;
        }
        .details-container {
            max-width: 500px;
            margin: 40px auto;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 24px rgba(44,62,80,0.10);
            padding: 32px 28px;
        }
        .listing-img {
            width: 100%;
            height: 260px;
            object-fit: cover;
            border-radius: 8px;
            margin-bottom: 22px;
        }
        h1 {
            color: #1976d2;
            margin-bottom: 18px;
            text-align: center;
        }
        .detail-label {
            font-weight: bold;
            color: #444;
        }
        .detail-value {
            margin-bottom: 12px;
            color: #222;
        }
        .back-link {
            display: block;
            margin: 32px auto 0 auto;
            padding: 12px 28px;
            background: #f0f4f8;
            color: #1976d2;
            border-radius: 6px;
            text-align: center;
            font-weight: bold;
            font-size: 1.08em;
            text-decoration: none;
            box-shadow: 0 2px 8px rgba(25, 118, 210, 0.06);
            width: fit-content;
            transition: background 0.2s, color 0.2s;
        }
        .back-link:hover {
            background: #e3f2fd;
            color: #125ea6;
            text-decoration: none;
        }
        .action-row {
            display: flex;
            justify-content: space-between;
            margin-top: 18px;
            margin-bottom: 0;
            gap: 10px;
        }
        .edit-listing {
            display: inline-block;
            padding: 10px 22px;
            background: #1976d2;
            color: #fff;
            border-radius: 6px;
            text-decoration: none;
            font-weight: bold;
            transition: background 0.2s;
        }
        .edit-listing:hover {
            background: #155a8a;
        }
        .delete-listing {
            display: inline-block;
            padding: 10px 22px;
            background: #e53935;
            color: #fff;
            border-radius: 6px;
            text-decoration: none;
            font-weight: bold;
            transition: background 0.2s;
        }
        .delete-listing:hover {
            background: #b71c1c;
        }
    </style>
</head>
<body>
    <div class="details-container">
        <img class="listing-img" src="<%= listing.image %>" alt="Hotel image">
        <h1><%= listing.tital %></h1>
        <div class="detail-label">Description:</div>
        <div class="detail-value"><%= listing.description %></div>
        <div class="detail-label">Price:</div>
        <div class="detail-value">â‚¹<%= listing.price %> / night</div>
        <div class="detail-label">Location:</div>
        <div class="detail-value"><%= listing.location %></div>
        <div class="detail-label">Country:</div>
        <div class="detail-value"><%= listing.country %></div>
        
        <div class="action-row">
            <a href="/listings/<%= listing._id %>/edit" class="edit-listing">Edit the Listing</a>
            <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit" class="delete-listing" onclick="return confirm('Are you sure you want to delete this listing?');">Delete the Listing</button>
            </form>
        </div>
    
        <a href="/listings" class="back-link">
            <span style="font-size:1.2em; vertical-align:middle;">&#8592;</span>
            <span style="vertical-align:middle;">Back to Listings</span>
        </a>
    </div>
</body>
</html>