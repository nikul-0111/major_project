<% layout("/layouts/boilerplate") -%>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            background: #f8f9fa;
        }
        h1 {
            
            margin: 50px 0 20px 0;
            color: #333;
        }
        .header-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 30px 40px 10px 40px;
            background: #f8f9fa;
        }
        .header-bar h1 {
            margin: 0;
            margin-right: 40px; /* Move heading to the right */
            margin-left: auto;  /* Pushes the h1 to the right in flex */
            text-align: right;
        }
        .create-btn {
            margin-right: 80px; /* Move button to the left */
            padding: 12px 28px;
            background: #0077b6;
            color: #fff;
            border: none;
            border-radius: 6px;
            font-size: 1.1em;
            font-weight: bold;
            cursor: pointer;
            text-decoration: none;
            transition: background 0.2s;
        }
        .create-btn:hover {
            background: #005f87;
        }
        .listing-container {
            display: flex;
            flex-wrap: wrap;
            gap: 24px;
            justify-content: center;
            padding: 20px;
        }
        .listing-card {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            width: 300px;
            margin-bottom: 20px;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            transition: transform 0.2s;
        }
        .listing-card:hover {
            transform: translateY(-5px) scale(1.03);
            box-shadow: 0 8px 24px rgba(0,0,0,0.15);
        }
        .listing-card img {
            width: 100%;
            height: 180px;
            object-fit: cover;
        }
        .listing-info {
            padding: 16px;
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
        .listing-title {
            font-size: 1.2em;
            margin: 0 0 10px 0;
            color: #0077b6;
            text-decoration: none;
        }
        .listing-location {
            color: #555;
            font-size: 0.95em;
            margin-bottom: 8px;
        }
        .listing-price {
            color: #009688;
            font-weight: bold;
            margin-bottom: 8px;
        }
        .listing-description {
            color: #444;
            font-size: 0.97em;
            margin-bottom: 10px;
        }
        .listings-header {
            max-width: 500px;
            margin: 40px auto 0 auto;
            background: #fff;
            border-radius: 14px;
            box-shadow: 0 4px 24px rgba(44,62,80,0.10);
            padding: 24px 0 18px 0;
            text-align: center;
        }
        .all-listings-title {
            margin: 40px 0 20px 0;
            color: #1976d2;
            font-size: 2.1em;
            letter-spacing: 1px;
            font-weight: 700;
            text-align: center;
        }
        @media (max-width: 700px) {
            .header-bar {
                flex-direction: column;
                gap: 16px;
                padding: 20px 10px 10px 10px;
            }
            .header-bar h1,
            .create-btn {
                margin: 0;
            }
            .listing-container {
                flex-direction: column;
                align-items: center;
            }
        }
    </style>
</head>
<body>
    <div class="header-bar">
        <div class="listings-header">
            <h1 class="all-listings-title">All Hotel Listings</h1>
        </div>
    </div>
    <div class="listing-container">
        <% for(let listing of alllistings) { %>
            <div class="listing-card">
                <a href="/listings/<%= listing._id %>">
                    <img src="<%= listing.image %>" alt="Hotel image">
                </a>
                <div class="listing-info">
                    <a class="listing-title" href="/listings/<%= listing._id %>">
                        <%= listing.title || listing.tital %>
                    </a>
                    <div class="listing-location">
                        <%= listing.location %>, <%= listing.country || listing.contry %>
                    </div>
                    <div class="listing-price">
                        â‚¹<%= listing.price %> / night
                    </div>
                    <div class="listing-description">
                        <%= listing.description || listing.discription %>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</body>
</html>